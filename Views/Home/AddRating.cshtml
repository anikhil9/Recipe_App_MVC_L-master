@{
    Layout = null; // No layout page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Rating</title>
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/Dash.css">
    <script src="~/js/rating.js" defer></script>
</head>
<body>
    <header class="wrapper style5">
        <h1>Add Rating</h1>
        <h5 style="text-align: right; padding-right: 20px;"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></h5>
    </header>
    <main class="wrapper style5">
        <form id="rating-form" method="post">
            <div class="form-group">
                <label for="recipe-name">Recipe Name:</label>
                <input type="text" id="recipe-name" name="recipeName" required>
            </div>
            <div class="form-group">
                <label for="rating">Rating (1-5):</label>
                <select id="rating" name="rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <button type="submit" class="button-style">Submit Rating</button>
        </form>
        <section>
            <h2>Existing Ratings</h2>
            <ul id="ratings-list">
 
            </ul>
        </section>
    </main>
</body>
</html>
